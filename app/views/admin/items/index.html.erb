<h1>商品一覧</h1>

<p><%= link_to "商品登録", new_admin_item_path %></p>

<div class="container">
   <div class="row text-center">
      <table>
         <thead>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
         </thead>
      <% @items.each do |item| %>
       <tr>
         <td><%= item.id %></td> 
         <td><%= link_to item.name, admin_item_path(item.id) %></td>
         <td><%= item.without_tax_price %></td>
       </tr>
      <% end %>
      </table>
   </div>   
</div>