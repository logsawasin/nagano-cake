<div class="container">
    <h2>注文履歴詳細</h2>
      <div class="row">
              <table>
                    <tr><th>購入者</th><span>　<span><td><%= @order.customer.full_name %></td></tr>
                    <tr><th>注文日</th><span>　</span><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
                    <tr><th>配送先</th><span>　</span><td><%= @order.address_name %></td></tr>
                    <tr><th>支払方法</th><span>　</span><td><%= @order.payment_method %></td></tr>
              </table>
      </div>
      <div class="row">
       <div class="col-lg-9">
          <table>
            <thead>
              <tr>
                <th>商品名</th>
                <th>単価(税込)</th>
                <th>数量</th>
                <th>小計</th>
              </tr>
            </thead>
          <tbody>
            <% @order_items.each do |order_item| %>
              <tr>
                <td><%= order_item.item.name %></td>
                <td><%= order_item.tax_included_price %></td>
                <td><%= order_item.quantity %></td>
                <td><%= order_item.subtotal %></td>
              </tr>
            <% end %>
          </tbody>
       </div>
       <div class="col-lg-3">
          <tbody>
            <% @sum = 0 %>
            <% @order_items.each do |order_item| %>
            <% @sum += order_item.subtotal %>
              <tr><th>商品合計</th><td><%= @sum  %></td></tr>
              <tr><th>送料</th><td><%= 800 %></td></tr>
              <tr><th>請求金額合計</th><td><%= @sum + 800 %></td></tr>
            <% end %>
          </tbody>
      </div>
         </table>
     </div>
</div>