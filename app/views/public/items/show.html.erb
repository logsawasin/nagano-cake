<h2>商品詳細一覧</h2>

<%= form_with model: @cart_item do |f| %>

<h2>商品名</h2>
 <p><%= @item.name %></p>
 <%= image_tag @item.image, size: "200x200" %>

<h2>説明</h2>
 <p><%= @item.text %></p>
 

<h2>値段</h2> 
 <p><%= @item.without_tax_price %></p>
 
 <%= f.hidden_field :item_id, :value => @item.id %>
 <%= f.select :quantity, *[1..9] %>
 
 <%= f.submit 'カートに入れる' %>
 <% end %>
 
 
 
